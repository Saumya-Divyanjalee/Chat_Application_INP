<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #f0f4f7;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.java.chat_application_inp.ClientController">


    <Label layoutX="230.0" layoutY="10.0" text="Client " textFill="#ff00f2">
        <font>
            <Font name="Arial Bold" size="24.0" />
        </font>
    </Label>
    <HBox layoutX="20.0" layoutY="50.0" spacing="15.0">
        <children>
            <TextArea fx:id="txtArea" editable="false" prefHeight="300.0" prefWidth="557.0" style="-fx-background-color: #ffffff; -fx-border-color: #c0c0c0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true" />
        </children>
    </HBox>
    <HBox layoutX="20.0" layoutY="370.0" prefHeight="30.0" prefWidth="558.0" spacing="10.0">
        <children>
            <TextField fx:id="txtMessage" prefHeight="30.0" prefWidth="425.0" promptText="Type your message..." style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #c0c0c0;" />
            <Button fx:id="sendId" onAction="#sendOnAction" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #FF00F2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="SEND" />
        </children>
    </HBox>

</AnchorPane>
